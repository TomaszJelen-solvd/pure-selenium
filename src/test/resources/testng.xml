<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="MyTestSuite">
    <listeners>
        <listener class-name="com.solvd.MyListener"/>
    </listeners>
    <test name="TestChrome" parallel="tests" thread-count="4">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.solvd.HomeTest"/>
            <class name="com.solvd.LoginTest"/>
            <class name="com.solvd.CartTest"/>
        </classes>
    </test>
    <test name="TestFirefox" parallel="methods" thread-count="4">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.solvd.HomeTest"/>
            <class name="com.solvd.LoginTest"/>
            <class name="com.solvd.CartTest"/>
        </classes>
    </test>
</suite>